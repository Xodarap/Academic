     int y;
     if(x++)  {}
     if(x--)  {}
     if(++x)  {}
     if(--x)  {}
     if(x+y)  {}
     if(x*y)  {}
     if(x-y)  {}
     if(x/y)  {}
     if(x=y)  {}
     if(x==y) {}
     if(x&&y) {}
     if(x||y) {}
     if(x!=y) {}
     if(!x)   {}
     if(-x)   {}  
}